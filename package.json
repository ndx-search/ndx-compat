{
  "name": "ndx-compat",
  "version": "0.6.0",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "es2015": "dist/es2015/index.js",
  "typings": "dist/typings/index.d.ts",
  "description": "Backward-compatible API for a lightweight full-text searching and indexing library ndx.",
  "scripts": {
    "clean": "rm -rf ./dist",
    "dist": "yarn dist:main && yarn dist:module && yarn dist:es2015",
    "dist:es2015": "tsc --project ./tsconfig.build.es2015.json",
    "dist:module": "tsc --project ./tsconfig.build.module.json",
    "dist:main": "tsc --project ./tsconfig.build.main.json",
    "lint": "tslint --project ./tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "ndx": "^0.6.0",
    "ndx-index": "^0.6.0",
    "ndx-query": "^0.6.0",
    "ndx-utils": "^0.6.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "codecov": "^3.1.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "license": "MIT",
  "author": {
    "name": "Boris Kaul",
    "email": "localvoid@gmail.com",
    "url": "https://github.com/localvoid"
  },
  "keywords": [
    "ndx"
  ],
  "homepage": "https://github.com/ndx-search/ndx-compat",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndx-search/ndx-compat"
  },
  "bugs": {
    "url": "https://github.com/localvoid/ndx-search/ndx-compat/issues"
  },
  "github": "https://github.com/localvoid/ndx-search/ndx-compat"
}
